<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<link rel="stylesheet" type="text/css" href="../public/css/style.css" />
	<link rel="stylesheet" type="text/css" href="../public/css/panel.css" />
	<link rel="stylesheet" type="text/css" href="../public/css/switch.css" />
  <script src="../public/scripts/script.js"></script>
	<title>PANEL</title>
</head>
<body>

<div class="centerBox">
	<div class="panelBlock">
		<table class="panel">
			<tbody>
				<tr>
					<td class="main">
						<table class="mainTop">
							<tbody>
								<tr>

                  <form action="/index" method="GET">
									  <td class="switchTab">
  										<table class="switchTab">
											  <tbody>
  												<tr>
													  <td class="download">DOWNLOAD</td>
													  <td class="switchBtn">
  														<label class="switch">
  															  <input type="checkbox" id="slider" name="slider" onchange="this.form.submit()"
                                    <% if (sliderValue === "on") { %>checked<% } %>/>
															    <span class="slider"></span>
														  </label>
													  </td>
													  <td class="edit">EDIT</td>
												  </tr>
											  </tbody>
										  </table>
									  </td>
									  <td class="filter">
  										<div class="filter">
											  <div class="dropCtgr">
  												<input id="category" name="category" type="text" placeholder="CATEGORY" onkeyup="filterFunction()"/>
												  <div class="ctgrList">
  													<div id="ctgr1" class="dropItem" onclick="dropItemOnClick('category','ctgr1', categories)">Category 1</div>
													  <div id="ctgr2" class="dropItem">Category 2</div>
													  <div id="ctgr3" class="dropItem">Category 3</div>
													  <div id="ctgr4" class="dropItem" onclick="dropItemOnClick('category','ctgr4')">Category 3</div>
													  <div class="dropItem">Category 3</div>
													  <div class="dropItem">Category 3</div>
													  <div class="dropItem">Category 3</div>
													  <div class="dropItem">Category 3</div>
													  <div class="dropItem">Category 3</div>
													  <div class="dropItem">Category 3</div>
													  <div class="dropItem">Category 3</div>
												  </div>
											  </div>
											  <div class="dropStl">
  												<input id="style" name="style" type="text" placeholder="STYLE" />
												  <div class="stlList">
  													<div id="stl1" class="dropItemStyle">Style 1</div>
													  <div id="stl2" class="dropItemStyle">Style 2</div>
													  <div id="stl3" class="dropItemStyle">Style 3</div>
												  </div>
											  </div>
										  </div>
									  </td>
                  </form>

								</tr>
							</tbody>
						</table>
						<div class="panelLine"></div>
						<div id="main" class="content" style="color: #DEB992;">
              <% fileHeaders.forEach(element => { %>  
                  <div style="padding: 10px 10px 10px 10px;">
                    <div><%=element.file_id%></div>
                    <div><%=element.file_name%></div>
                    <div><%=element.admin_name%></div>
                    <form action="/index", method="POST">
                      <button type="submit">Apply for editing</button>
                    </form>
                  </div>
                  <div class="panelLine" style="width: 95%;"></div>
              <% }) %>  
						</div>
					</td>
					<td class="side">
						<table class="sideTop">
							<tbody>
								<tr>
									<td class="user">
										<div class="userName">
											Username
										</div>
										<div class="userRole">
											ROLE
										</div>
									</td>
									<td class="logOut">
										<form action="/index?_method=DELETE", method="POST">
                      <button class="logBtn" type="submit">LOG OUT</button>
                    </form>
									</td>
								</tr>
							</tbody>
						</table>
						<div class="panelLine"></div>
						<div id="side" class="content" style="color:#DEB992;">
                <% editedFiles.forEach(element => { %>
                  <div style="padding: 10px 10px 10px 10px;">
                    <div><%=element.file_id%></div>
                    <div><%=element.file_name%></div>
                    <a href="/viewfile">VIEW</a>
                  </div>
                  <div class="panelLine" style="width: 95%;"></div>
                <% }) %>
						</div>
				</tr>
			</tbody>
		</table>
	</div>
</div>

</body>
</html>
